<page id="prologue" bg_image="prologue_1.jpg">

<!-- Botão OBJECTION -->   
  <agent
  id="obejction"
  text="OBJECTION"
  x="34"
  y="100"
  on_click="set(objection, $objection+1)"
  />

<!-- Botão para avançar a fala -->  
<agent 
  id="next"
  text=">>"
  x="80"
  y="45"
  on_click="setIf(1=1, objection, 0); set(dialogue_next, $dialogue_next + 1)" 
/>

    />  
  
  <fab-if when="$dialogue_next = 0">
    <agent 
    id="dialogue_1"
    text = '"So...are you not coming with us?"'
    x = '36'
    y = '390'
    font-size=""
    animation="typewriter"
    />
    <fab-if when="$objection=1">
      <agent
      id="obj"
      text="why would you do this?"
      x="36"
      y="390"
      animation="typewriter"
      />
</fab-if>
    </fab-if>

  <fab-if when="$dialogue_next=1">
    <agent
    id="dialogue_2"
    text='"Not felling too good right now...sorry"'
    animation="typewriter"
    x = '36'
    y = '390'
    />
    </fab-if>
  
  
    
</page>