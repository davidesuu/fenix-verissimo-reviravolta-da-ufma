<page id="prologue" bg_image="prologue_1.jpg">
  

   <!-- OBJECTION: IMAGEM --> 
  <fab-if when="show_objection_img=true">
  <agent
    id="obj_imgg"
    image="cemetery-skeleton.png"
    x="center"
    y="center"
    animation="bounce-in"
    />
  </fab-if>

  <!-- OBJECTION: sempre aparece -->
  <agent
    id="objection"
    text="OBJECTION!"
    x="34"
    y="100"
    on_click="set(show_objection_img, true); set(objection_timing, $dialogue_next); set(objection_stage, 0)"
  />

  <!-- ======================== -->
  <!-- Introdução -->
  <!-- ======================== -->
  <fab-if when="$dialogue_next = 0">
    <agent 
      id="intro"
      text="July 13th 2025"
      color="green"
      x="36"
      y="390"
      animation="typewriter"
      
    />
    <agent 
      id="next_0"
      text=">>"
      x="80"
      y="45"
      on_click="set(dialogue_next, 1); playsound=("fear.mp3")" 
    />
  </fab-if>

  <!-- ======================== -->
  <!-- Fala 1 -->
  <!-- ======================== -->
  <fab-if when="$dialogue_next = 1 and $objection_timing != 1">
    <agent 
      id="fala1" 
      text='"Esse caso é bem simples. Não vejo a necessidade de ir ao tribunal."' 
      x="36" 
      y="390" 
      animation="typewriter"
    />
    <agent 
      id="next_1"
      text=">>"
      x="80"
      y="45"
      on_click="set(dialogue_next, 2)" 
    />
  </fab-if>

  <fab-if when="$dialogue_next = 1 and $objection_timing = 1 and $objection_stage = 0">
    <agent 
      id="obj1" 
      text='"Simples demais. Às vezes, o diabo está nos detalhes."' 
      x="36" 
      y="390" 
      animation="typewriter"
    />
    <agent 
      id="next_obj1" 
      text=">>"
      x="80"
      y="45"
      on_click="set(objection_stage, 1);set(show_objection_img, false)" 
    />
  </fab-if>

  <fab-if when="$dialogue_next = 1 and $objection_timing = 1 and $objection_stage = 1">
    <agent 
      id="resposta1" 
      text='"É só uma maneira de dizer. Os fatos falam por si."' 
      x="36" 
      y="390" 
      animation="typewriter"
    />
    <agent 
      id="next_resposta1"
      text=">>"
      x="80"
      y="45"
      on_click="set(dialogue_next, 2); set(objection_stage, 0); set(objection_timing, -1)" 
    />
  </fab-if>

  <!-- ======================== -->
  <!-- Fala 2 -->
  <!-- ======================== -->
  <fab-if when="$dialogue_next = 2 and $objection_timing != 2">
    <agent 
      id="fala2" 
      text='"Naquela hora não havia nenhum professor no prédio, logo isso facilitou o caso."' 
      x="36" 
      y="390" 
      animation="typewriter"
    />
    <agent 
      id="next_2"
      text=">>"
      x="80"
      y="45"
      on_click="set(dialogue_next, 3)" 
    />
  </fab-if>

  <fab-if when="$dialogue_next = 2 and $objection_timing = 2 and $objection_stage = 0">
    <agent 
      id="obj2" 
      text='"Facilitou pra quem? Você sabia que ela estaria lá?"' 
      x="36" 
      y="390" 
      animation="typewriter"
    />
    <agent 
      id="next_obj2"
      text=">>"
      x="80"
      y="45"
      on_click="set(objection_stage, 1);set(show_objection_img, false)" 
    />
  </fab-if>

  <fab-if when="$dialogue_next = 2 and $objection_timing = 2 and $objection_stage = 1">
    <agent 
      id="resposta2" 
      text='"Eu só quis dizer que não havia ninguém pra impedir que ela fizesse isso."' 
      x="36" 
      y="390" 
      animation="typewriter"
    />
    <agent 
      id="next_resposta2"
      text=">>"
      x="80"
      y="45"
      on_click="set(dialogue_next, 3); set(objection_stage, 0); set(objection_timing, -1)" 
    />
  </fab-if>

  <!-- ======================== -->
<!-- Fala 3 -->
<!-- ======================== -->
<fab-if when="$dialogue_next = 3 and $objection_timing != 3">
  <agent 
    id="fala3" 
    text='"A única nota alterada foi a dela, me parece meio óbvio, não acham?"' 
    x="36" 
    y="390" 
    animation="typewriter"
  />
  <agent 
    id="next_last"
    text=">>"
    x="80"
    y="45"
    on_click="set(dialogue_next, 0); set(objection_stage, 0); set(objection_timing, -1)" 
  />
</fab-if>

<fab-if when="$dialogue_next = 3 and $objection_timing = 3 and $objection_stage = 0">
  <agent 
    id="obj3" 
    text='"Obvio? Nem sempre as aparências revelam a verdade."' 
    x="36" 
    y="390" 
    animation="typewriter"
  />
  <agent 
    id="next_obj3"
    text=">>"
    x="80"
    y="45"
    on_click="set(objection_stage, 1);set(show_objection_img, false)" 
  />
</fab-if>

<fab-if when="$dialogue_next = 3 and $objection_timing = 3 and $objection_stage = 1">
  <agent 
    id="resposta3" 
    text='"Eu tenho uma prova que vai mostrar que nem tudo é tão simples assim."' 
    x="36" 
    y="390" 
    animation="typewriter"
  />
  <agent  
  id="next_page"
  text=">>"
  x="80"
  y="45"
  on_click="goToPage('prologue_part2')" 
  />
</fab-if>


</page>