<page id="prologue" bg_image="prologue_1.jpg">

 <!-- Botão OBJECTION, disponível o tempo todo, mas a resposta dele depende do momento -->
  <agent
    id="objection"
    text="OBJECTION!"
    x="34"
    y="100"
    on_click="setIf(1=1, objection, 1); set(objection_timing, $dialogue_next)"
  />

<!-- Botão para avançar a fala -->  
<agent 
  id="next"
  text=">>"
  x="80"
  y="45"
  on_click="setIf(1=1, objection, 0); set(dialogue_next, $dialogue_next + 1)" 
/>
  

  
<fab-if when="$dialogue_next = 0">
    <agent 
    id="dialogue_1"
    text = "July 13th 2025"
    color="green"
    x = '36'
    y = '390'
    font-size=""
    animation="typewriter"
    />
</fab-if>

 <fab-if when="$dialogue_next = 1 and $objection != 1">
    <agent
      id="testemunha1"
      text='"Esse caso é extremamente simples. Não havia nenhum professor no campus naquele momento e a única nota alterada foi a da acusada. Parece óbvio, não?"'
      x="36"
      y="390"
      animation="typewriter"
      />
 </fab-if>

  
 <!-- Fala 0: Se o advogado usa OBJECTION no momento certo (mesmo diálogo) -->
  <fab-if when="$dialogue_next = 0 and $objection = 1">
    <agent
      id="advogado1"
      text='"Nem tão óbvio assim! Essa mesma lógica pode apontar para alguém tentando incriminá-la."'
      x="36"
      y="390"
      animation="typewriter"
    />
  </fab-if>

  
    
</page>