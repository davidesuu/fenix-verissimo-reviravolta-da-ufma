<page id="prologue" bg_image="prologue_1.jpg">

 <!-- Botão OBJECTION, disponível o tempo todo, mas a resposta dele depende do momento -->
  <agent
    id="objection"
    text="OBJECTION!"
    x="34"
    y="100"
    on_click="setIf(1=1, objection, 1); set(objection_timing, $dialogue_next)"
  />

<!-- Botão para avançar a fala -->  
<agent 
  id="next"
  text=">>"
  x="80"
  y="45"
  on_click="setIf(1=1, objection, 0); set(dialogue_next, $dialogue_next + 1)" 
/>
  

  
<fab-if when="$dialogue_next = 0">
    <agent 
    id="dialogue_1"
    text = "July 13th 2025"
    color="green"
    x = '36'
    y = '390'
    font-size=""
    animation="typewriter"
    />
</fab-if>

<!-- Fala normal -->
<fab-if when="$dialogue_next = 0 and $objection_timing != 0">
  <agent id="test1" text='"Esse caso é bem simples. Não vejo a necessidade de ir ao tribunal."' x="36" y="390" animation="typewriter" />
</fab-if>

<!-- OBJECTION feita na fala 0 -->
<fab-if when="$objection_timing=0">
  <agent 
    id="obj1" 
    text='"Simples demais. Às vezes, o diabo está nos detalhes."' 
    x="36" 
    y="390" 
    animation="typewriter" 
    />
  
  <agent 
    id="test2" 
    text='"É só uma maneira de dizer. Os fatos falam por si."' 
    x="36" 
    y="420" 
    animation="typewriter"
    />
</fab-if>


  
    
</page>