<page id="final_feliz" bg_image="Clara_Feliz.png" bg_music="14. Maya Fey - Turnabout Sisters 2001 (1).mp3">
  <!-- TEXT BOX DO JOGO  -->  
  <fab-if when="text_box=true">
    <agent 
      id="new_agent"
      image="text_box_real.png"
      y="393"
      x="1"
      />
  </fab-if>

  
 <!-- CLARA NOME  --> 
  <fab-if when="clara_nome=true">
    <agent
      id="clara_"
      text="Clara"
      y="400"
      x="60"
